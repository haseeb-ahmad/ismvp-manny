<body class="landing1">
	<header class="row">
		<div class="head col-sm-7">
			<img class="logo" src="/assets/logo_2.png" alt="">
		</div>
		<div class="searcher col-sm-offset-1 col-sm-4">
			<%= link_to "LOGIN", new_user_session_path, :class => "button white" %>
		</div>
	</header>
	
	<div id="main" class="row center">
		<div class="col-sm-12">
			<div class="main-title"> Stay in touch, stay on top. </div>
			<div class="direction"> Enter your email to be part of our private beta. </div>
			<div class="email">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
					<%= f.email_field :email, :placeholder => "EMAIL ADDRESS" %>
					<%= f.submit "SIGN UP", :class => "signup" %>
				<% end %>
			</div>
		</div>
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> <br/>
		<%= link_to "Sign in with Google", user_omniauth_authorize_path(:google) %> <br/>
		<%= link_to "Sign in with LinkedIn", user_omniauth_authorize_path(:linkedin) %>
	</div>
	
	<footer class="row">
		<div class="copyright col-sm-6"> Â© 2013 CumulusMe. </div>
		<div class="bottom-menu col-sm-6">
			<ul>
				<li> <a href="#"> About </a> </li>
				<li> <a href="#"> Contact </a> </li>
			</ul>
		</div>
	</footer>
</body>